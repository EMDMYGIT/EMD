        <th>
            @Html.DisplayNameFor(model => model.e_mail)
        </th>
      
        <th>
            @Html.DisplayNameFor(model => model.City)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Country)
        </th>
    </tr>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ContactComment.Comment)
        </th>
        <th></th>
    </tr>
   

@foreach (var item in Model)
{
    <!-- View all row selected.-->
    string selectedRow = "";
    if (item.ContactID == ViewBag.ContactID)
    {
        selectedRow =  "success";
    }
    <tr class="@selectedRow">
        <td>
            @Html.DisplayFor(modelItem => item.ContactID)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Surname)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Surname2)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Telephone)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.e_mail)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.City)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Country)
        </td>
        <td>
            @Html.ActionLink("Select", "Index", new { id = item.ContactID }) |
            @Html.ActionLink("Edit", "Edit", new { id = item.ContactID/* id=item.PrimaryKey */ }) |
            @Html.ActionLink("Details", "Details", new { id = item.ContactID /* id=item.PrimaryKey */ }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.ContactID /* id=item.PrimaryKey */ })
        </td>
    </tr>
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ContactComment.Comment)
        </td>


    </tr>
}

</table>
